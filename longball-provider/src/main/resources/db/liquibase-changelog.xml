        <addPrimaryKey columnNames="id" constraintName="team_pkey" tableName="team"/>
        <addForeignKeyConstraint baseColumnNames="owner_id" baseTableName="team" constraintName="fk_owner" deferrable="false" initiallyDeferred="false" onDelete="NO ACTION" onUpdate="NO ACTION" referencedColumnNames="id" referencedTableName="longball_user"/>
        <addForeignKeyConstraint baseColumnNames="league_id" baseTableName="team" constraintName="fk_league" deferrable="false" initiallyDeferred="false" onDelete="NO ACTION" onUpdate="NO ACTION" referencedColumnNames="id" referencedTableName="league"/>
    </changeSet>
    <changeSet author="akahn" id="create-person-table">
        <createTable tableName="person">
            <column name="id" type="UUID">
