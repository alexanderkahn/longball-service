    <changeSet author="akahn" id="create-roster_position-table">
        <createTable tableName="roster_position">
            <column name="id" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="created" type="TIMESTAMP WITH TIMEZONE">
                <constraints nullable="false"/>
