            <column name="last_modified" type="TIMESTAMP WITH TIMEZONE">
                <constraints nullable="false"/>
            </column>
            <column name="owner_id" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="first" type="VARCHAR(255)">
